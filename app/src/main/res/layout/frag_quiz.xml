<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andrid="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quiz_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:visibility="gone"
    >

    <com.google.android.material.textview.MaterialTextView

        android:id="@+id/tv_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="instructions:\n\n"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangular_bg"
        android:padding="8dp"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/quiz_options_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_instructions"
        app:cardBackgroundColor="@color/quiz_options_bg_color"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            >
            <ImageView
                android:id="@+id/quiz_options_icon"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:src="@drawable/quiz_icon"
                andrid:layout_marginTop="16dp"
                />
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/group_quiz_test_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:selectionRequired="true"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:singleSelection="true"
                >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_rapid_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rapid test"
                app:backgroundTint="@drawable/quiz_test_option_colors"
                android:textColor="@drawable/quiz_option_text_color"
                />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_progressor_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:text="progresser test"
                    app:backgroundTint="@drawable/quiz_test_option_colors"
                    android:textColor="@drawable/quiz_option_text_color"

                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_scholar_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="scholar test"
                    app:backgroundTint="@drawable/quiz_test_option_colors"
                    android:textColor="@drawable/quiz_option_text_color"

                    />


         </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_start_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/quiz_options_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:text="start"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/black"
        android:padding="8dp"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/minium_words_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sad2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="please learn minimum 10 words"
            android:textSize="20sp"
            android:textColor="@color/wrong_chip_color"
            />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>