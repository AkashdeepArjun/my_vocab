<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ballons_bg"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/words_learned_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide_horizon"
        android:layout_margin="8dp"
        android:elevation="16dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/bilkul_light_green"

        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_words_learned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/number_of_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="108"
                android:gravity="center"
                android:textSize="80sp"
                android:textStyle="bold"
                android:textColor="@color/number_of_words_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/trophy_svg"
                />
            <TextView
                android:id="@+id/title_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/words_n_learned"
                android:textSize="60sp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number_of_words"
                android:layout_marginEnd="16dp"


                />

            <!--            <ImageView-->
            <!--                android:id="@+id/medal"-->
            <!--                android:layout_width="96dp"-->
            <!--                android:layout_height="96dp"-->
            <!--                android:src="@drawable/_x1"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                android:layout_marginBottom="16dp"-->
            <!--                />-->
            <!--            <ImageView-->
            <!--                android:id="@+id/medal2"-->
            <!--                android:layout_width="96dp"-->
            <!--                android:layout_height="96dp"-->
            <!--                android:src="@drawable/_x1"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                android:layout_marginBottom="16dp"-->
            <!--                />-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_horizon"
        android:layout_marginTop="16dp"
        android:text="@string/button_learn_new_words"
        app:cornerRadius="48dp"
        android:padding="16dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:backgroundTint="@color/learn_new_word_color"
        android:elevation="16dp"
        android:gravity="center_horizontal"
        android:layout_margin="16dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_my_dictionary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_learn"
        android:layout_marginTop="16dp"
        android:text="my dictionary"
        app:cornerRadius="48dp"
        android:padding="16dp"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:backgroundTint="#E7D2CC"
        android:elevation="16dp"
        tools:ignore="HardcodedText"
        android:layout_margin="16dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_horizon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />


</androidx.constraintlayout.widget.ConstraintLayout>