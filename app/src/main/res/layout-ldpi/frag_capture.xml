<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ballons_bg"
    >
    <TextView
        android:id="@+id/helper_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capture_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_guide"
        android:fontFamily="@font/disney_font_1"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/capture_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_guide_31"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_guide_70"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        >

        <androidx.camera.view.PreviewView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_photo_capture_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/photo_capture_animation"
            android:visibility="gone"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/capture_photo_button"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="capture text area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/capture_photo_layout"
        app:cornerRadius="24dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticle_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide_31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.31"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.80"
        android:orientation="horizontal"
        />



    <TextView
        android:id="@+id/tv_permission_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/capture_photo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/camera_permission_explanation"
        android:textColor="#FF4A4A"
        android:visibility="gone"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/grant_permission_button"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:text="grant permissions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_permission_info"
        android:backgroundTint="#EEE3CB"
        android:textColor="@color/black"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_title_capture_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="capture Photo "
        android:textSize="40sp"
        android:fontFamily="@font/disney_font_1"
        android:textColor="@color/black"
        android:background="@drawable/paint_green"
        android:textAlignment="center"
        android:padding="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>