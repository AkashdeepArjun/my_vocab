<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.My_vocab" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
<!--         DEFAULT PRIMARY <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/learn_new_word_color</item>
<!--      DEFAULT PRIMARY VARIANT   <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/primary_secondry_light_wala</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenAnimatedIcon">
            @drawable/icon_sp16_foreground
        </item>
        <item name="windowSplashScreenIconBackgroundColor">@color/icon_sp16_background</item>
        <item name="postSplashScreenTheme">@style/Theme.My_vocab</item>

    </style>
</resources>